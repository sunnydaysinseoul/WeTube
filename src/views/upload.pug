//- URL : /videos/upload
extends base.pug
include partials/header.pug

    block headerContent

block content
    if errorMessage
        span=errorMessage
    form(method="POST",enctype="multipart/form-data")
        input(name="title",type="text",placeholder="Title",required)
        lable(for="video") Video File
        input(type="file",accept="video/*",required,id="video",name="video")
        //-name="video"는 controller가 아니라 router의 videoUpload.single("video") 에서 사용함
        input(name="description",type="text",placeholder="Description",required)
        input(name="hashtags",type="text",placeholder="Hashtags (comma로 구분)",required)
        input(name="rating",type="number",min=0,max=5,step=0.5,placeholder="Rating",required)
        input(type="submit",value="Upload Video")