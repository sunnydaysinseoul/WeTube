//- URL : /videos/upload
extends base.pug
block headerContent
    include partials/headerHome.pug
block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="title",type="text",placeholder="Title",required)
        input(name="description",type="text",placeholder="Description")
        input(name="hashtags",type="text",placeholder="Hashtags (comma로 구분)",required)
        input(name="rating",type="number",min=0,max=5,step=0.5,placeholder="Rating",required)
        input(type="submit",value="Upload Video")