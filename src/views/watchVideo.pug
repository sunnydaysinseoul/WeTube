//- URL : /videos/:vId 
extends base.pug
include mixins/video.pug 

block headerContent
    if loggedInUser
    span &nbsp|&nbsp
    a(href="/videos/upload") Upload New    
    
block content
    if loggedInUser
        if String(loggedInUser._id) === String(video.owner._id)
            a(href=`${video.id}/edit`) Edit
            span &nbsp|&nbsp
            a(href=`${video.id}/delete`) Delete

    div#videoContainer(data-id=video._id)
        video(src="/" + video.fileUrl)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currenTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div
                span#fullScreen
                    i.fas.fa-expand

    div.video__data
        p.video__title=video.title
        small.video__owner Uploaded by 
            a(href=`/users/${video.owner._id}`)=video.owner.name
        small.video__createdAt=new Date(video.createdAt).toLocaleDateString("ko-kr", {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'})
    if loggedInUser
        div.video__comments 
            form.video__comment-form#commentForm
                input.input-comment(placeholder="Write a comment...") 
                button.fa-regular.fa-paper-plane.fa-2x.commentBtn(type="submit")
                  
                //- input(type="submit" class="fa-regular fa-paper-plane-top")
                
            ul
            each comment in comments.reverse()
                div.container.video__comment(data-id=comment._id)
                    if comment.owner.avatarUrl
                        image.commentImage(src=comment.owner.avatarUrl)
                    else
                        image.commentImage(src='/uploads/image/user-solid.png')
                    span.commentOwner &nbsp#{comment.owner.name}&nbsp:&nbsp
                        span.commentText #{comment.text}
                    if loggedInUser
                        if String(loggedInUser._id) === String(comment.owner)
                            span#deleteBtn.deleteBtn.fa-solid.fa-delete-left

block scripts
    script(src="/static/js/videoPlayer.js")
    script(src="/static/js/commentSection.js")
    script(src="/static/js/main.js")