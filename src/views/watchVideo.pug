//- URL : /videos/:vId 
extends base.pug
include mixins/video.pug 

include partials/header.pug
    block headerContent
        if loggedInUser
        span &nbsp|&nbsp
        a(href="/videos/upload") Upload New    
block content
    if loggedInUser
        if String(loggedInUser._id) === String(video.owner._id)
            a(href=`${video.id}/edit`) Edit
            span &nbsp|&nbsp
            a(href=`${video.id}/delete`) Delete
    video(src=`/${video.fileUrl}`,controls,width="100%")
    small #{video.views}#{video.views === 1 ? "view" : "views"} | Created: #{video.createdDate} | Rating : #{video.ratings}/5
    br
    small Uploaded by 
        a(href=`/users/${video.owner._id}/profile`) #{video.owner.name}
    h5 #{video.hashtags}
    p=video.description